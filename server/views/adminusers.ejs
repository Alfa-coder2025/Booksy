      <div class="col-md-10 content-area">
        <h2>Users</h2>

        <!--search-->
        <div class="input-group mb-3">
  <input type="text" id="userSearch" class="form-control" placeholder="Search users by name or email">
  <button class="btn btn-outline-secondary" type="button" id="clearUserSearch">Clear</button>
</div>

       <!-- Filter -->
<div class="filter-box d-flex align-items-center">
  <button class="btn filter-icon"><i class="fas fa-filter"></i></button>
  <span class="ms-2">Filter By</span>
  <select id="filter-dropdown" class="form-select ms-2 w-auto">
    <option value="all">All</option>
    <option value="blocked">Blocked</option>
    <option value="unblocked">Active</option>
  </select>
</div>


        <!-- Users Table -->
        <table class="table mt-4">
          <thead class="table-primary">
            <tr>
              <th>S.No</th>
              <th>Name</th>
              <th>Email</th>
              <th>Mobile</th>
              <th>Status</th>
              <th>Update</th>
            </tr>
          </thead>
