<!DOCTYPE html>
<html lang="en">
<head>
  <head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Users</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="/css/admin.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
</head>
<body>
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-2">
        <%- include('sidebar') %>
      </div>
      <div class="col-md-10 content-area">
        <h2>Users</h2>

        <!-- Filter -->
        <div class="filter-box d-flex align-items-center">
          <button class="btn filter-icon"><i class="fas fa-filter"></i></button>
          <span class="ms-2">Filter By</span>
          <select class="form-select ms-2 w-auto">
            <option>blocked</option>
            <option>active</option>
          </select>
        </div>

        <!-- Users Table -->
        <table class="table mt-4">
          <thead class="table-primary">
            <tr>
              <th>S.No</th>
              <th>Name</th>
              <th>Email</th>
              <th>Mobile</th>
              <th>Update</th>
            </tr>
          </thead>
         <!--tbody-->
       <tbody>
  <% if (users.length === 0) { %>
    <tr>
      <td colspan="5" class="text-center text-muted py-4">No users available.</td>
    </tr>
  <% } else { %>
    <% users.forEach((user, index) => { %>
      <tr>
        <td><%= index + 1 %></td>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.phone %></td>
        <td>
          <a href="/admin/users/<%= user._id %>/edit" class="btn btn-sm btn-outline-primary me-1">
            <i class="fas fa-pen"></i>
          </a>
        </td>
      </tr>
    <% }) %>
  <% } %>
</tbody>


        </table>
      </div>
    </div>
  </div>
</body>
</html>
