      document.getElementById('updateCategoryBtn').addEventListener('click', function() {
        
        alert('Category updated!'); // Placeholder for actual update logic
        const modal = bootstrap.Modal.getInstance(editModal);
        modal.hide();
      });
    });
  </script>
</body>
</html>