
<!DOCTYPE html>
<html lang="en">
<head>
  <head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Users</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="/css/admin.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
</head>
<h2>Products</h2>
<body>

   <div class="container-fluid">
    <div class="row">
      <div class="col-md-2">
        <%- include('sidebar') %>
      </div>
      <div class="col-md-10 content-area">
        <h2>Products</h2>
<!-- Filter -->
<div class="filter-box d-flex align-items-center gap-3 flex-wrap bg-white p-3 rounded shadow-sm">
  <div class="d-flex align-items-center gap-2">
    <button class="btn btn-light border"><i class="fas fa-filter"></i></button>
    <span>Filter By</span>
  </div>
  <div>
    <select class="form-select">
      <option selected>14 Feb 2019</option>
      <option>Latest</option>
      <option>Oldest</option>
    </select>
  </div>
  <div>
    <select class="form-select">
      <option selected>Category</option>
      <option>Fiction</option>
      <option>Financial</option>
      <option>Self Help</option>
    </select>
  </div>
  <div class="ms-auto">
    <a href="/admin/products/new" class="btn btn-primary">
      <i class="fas fa-plus me-2"></i> Add New Product
    </a>
  </div>
</div>

<!-- Products Table -->
<table class="table table-hover mt-4 align-middle bg-white rounded shadow-sm overflow-hidden">
  <thead class="table-light">
    <tr>
      <th>Image</th>
      <th>Product Name</th>
      <th>Category</th>
      <th>Author</th>
      <th>Price</th>
      <th>Piece</th>
      <th class="text-center">Action</th>
    </tr>
  </thead>
  <tbody>
    <% const products = []; %>
    <% if (products.length === 0) { %>
      <tr>
        <td colspan="7" class="text-center text-muted py-4">No products available.</td>
      </tr>
    <% } else { %>
      <% products.forEach((p) => { %>
        <tr>
          <td><img src="<%= p.imageUrl %>" alt="Book" width="50"></td>
          <td><%= p.name %></td>
          <td><%= p.category %></td>
          <td><strong><%= p.author %></strong></td>
          <td>â‚¹<%= p.price.toFixed(2) %></td>
          <td><%= p.stock %></td>
          <td class="text-center">
            <a href="/admin/products/<%= p._id %>/edit" class="btn btn-sm btn-outline-primary me-1"><i class="fas fa-pen"></i></a>
            <form action="/admin/products/<%= p._id %>?_method=DELETE" method="POST" class="d-inline">
              <button type="submit" class="btn btn-sm btn-outline-danger"><i class="fas fa-trash"></i></button>
            </form>
          </td>
        </tr>
      <% }) %>
    <% } %>
  </tbody>
</table>
</body>
</html>