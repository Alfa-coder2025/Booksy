
<!DOCTYPE html>
<html lang="en">
<head>
  <head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Users</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="/css/admin.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
  <script src="/js/main/pagination.js"></script>
  <script src="/js/main/adminproducts.js"></script>
</head>

<body>


   <div class="container-fluid">
    <div class="row">
      <div class="col-md-2">
        <%- include('sidebar') %>
      </div>
      <div class="col-md-10 content-area">
        <h3>Products</h3>
<!-- Filter -->
<div class="filter-box d-flex align-items-center gap-3 flex-wrap bg-white p-3 rounded shadow-sm" id="filter-products">
  <div class="d-flex align-items-center gap-2">
    <button class="btn btn-light border"><i class="fas fa-filter"></i></button>
    <span>Filter By</span>
  </div>
  <div>
    <select class="form-select">
      <option selected>14 Feb 2019</option>
      <option>Latest</option>
      <option>Oldest</option>
    </select>
  </div>
  <div>
    <select class="form-select">
      <option selected>Category</option>
      <option>Fiction</option>
      <option>Financial</option>
      <option>Self Help</option>
    </select>
  </div>
  <div class="ms-auto">
    <a href="/admin-addproducts" class="btn btn-primary">
      <i class="fas fa-plus me-2"></i> Add New Product
    </a>
  </div>
</div>


          <div class="input-group mb-3">
  <input type="text" id="productSearch" class="form-control" placeholder="Search Books by name">
  <button class="btn btn-outline-secondary" type="button" id="clearProductSearch">Clear</button>
</div>

<!-- Products Table -->
<table class="table table-hover mt-4 align-middle bg-white rounded shadow-sm overflow-hidden" id="products-table-body">
  <thead class="table-light">
    <tr>
      <th>Image</th>
      <th>Product Name</th>
      <th>Category</th>
      <th>Author</th>
      <th>Price</th>
      <th>Stock</th>
      <th class="text-center">Action</th>
    </tr>
  </thead>
 <tbody id="productTableBody">
</tbody>

</table>
<!--page sizing-->
 <div>
    <label for="pageSize" class="me-2">Rows per page:</label>
    <select id="pageSize" class="form-select form-select-sm d-inline-block" style="width: auto;">
      <option value="3">3</option>
      <option value="5">5</option>
      <option value="10">10</option>
    </select>
  </div>

<!-- Pagination Controls -->
      <nav>
        <ul id="pagination" class="pagination"></ul>
      </nav>
</body>
</html>