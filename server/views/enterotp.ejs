<!--form section-->

<main class="forgot-password-container">
 <div class="col-md-6 col-lg-4">
    <div class="form-wrapper">
      <h3>Enter the OTP</h3>
      <p class="mb-4">The OTP has been sent to your registered email</p>   
      <form id="verifyotpform">
        <div class="input-group mb-3">
        <input type="text" class="form-control" placeholder="Enter OTP" name="otp" required>
        <div class="input-group-append">
        <button class="btn btn-outline-secondary" type="button">Resend</button>
     </div>
</div>
<p class="text-muted">0:15 seconds remaining</p>
        <p class="text-center">Back to Login <a href="/login">Login</a></p>
        <button type="submit" class="btn btn-primary w-100 mb-3">Verify</button>
        </form>
      
    </div>
  </div>
</main>

<!--footer-->
